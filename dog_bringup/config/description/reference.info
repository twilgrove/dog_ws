// 默认的目标移动速度限制 (单位: m/s)
targetDisplacementVelocity          0.5; 

// 默认的目标旋转速度限制 (单位: rad/s)
targetRotationVelocity              0.3; 

// 期望的质心 (CoM) 离地高度 (单位: m)
// 状态估计和 MPC 会尽量让底座保持在这个高度
comHeight                           0.575;

// 默认关节状态：定义机器人站立时的名义角度 (单位: rad)
// 顺序通常与 URDF 中的关节定义一致
defaultJointState
{
   (0,0)  -0.25   ; LF_HAA (左前腿 髋部外展/内收关节)
   (1,0)   0.60   ; LF_HFE (左前腿 髋部前后摆动关节)
   (2,0)  -0.85   ; LF_KFE (左前腿 膝关节)
   (3,0)  -0.25   ; LH_HAA (左后腿 髋部外展/内收关节)
   (4,0)  -0.60   ; LH_HFE (左后腿 髋部前后摆动关节)
   (5,0)   0.85   ; LH_KFE (左后腿 膝关节)
   (6,0)   0.25   ; RF_HAA (右前腿 髋部外展/内收关节)
   (7,0)   0.60   ; RF_HFE (右前腿 髋部前后摆动关节)
   (8,0)  -0.85   ; RF_KFE (右前腿 膝关节)
   (9,0)   0.25   ; RH_HAA (右后腿 髋部外展/内收关节)
   (10,0) -0.60   ; RH_HFE (右后腿 髋部前后摆动关节)
   (11,0)  0.85   ; RH_KFE (右后腿 膝关节)
}

// 初始步态调度：系统启动那一刻的步态状态
initialModeSchedule
{
  modeSequence
  {
    [0]  STANCE    // 初始阶段 0：保持站立
    [1]  STANCE    // 初始阶段 1：继续保持站立
  }
  eventTimes
  {
    [0]  0.5       // 在 0.5 秒时发生状态切换 (此处是从 STANCE 切到 STANCE，即保持不变)
  }
}

// 默认步态模板：定义一个循环步态的基础周期
// 当没有新的指令下发时，机器人会循环执行这个模板
defaultModeSequenceTemplate
{
  modeSequence
  {
    [0]  STANCE    // 默认模式：全支撑站立 (STANCE)
  }
  switchingTimes
  {
    [0]  0.0       // 周期开始时间
    [1]  1.0       // 周期结束时间 (代表该站立模板总长 1.0 秒)
  }
}