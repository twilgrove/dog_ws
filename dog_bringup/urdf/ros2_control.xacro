<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:macro name="leg_control_interface" params="name">
        
        <joint name="${name}_HipX_joint">
            <command_interface name="effort">
                <param name="min">-${hipx_eff}</param>
                <param name="max">${hipx_eff}</param>
            </command_interface>
            <command_interface name="position"/>
            <command_interface name="velocity"/>
            <command_interface name="kp"/>
            <command_interface name="kd"/>
            <command_interface name="mode"/>
            <state_interface name="driver_tem"/>
            <state_interface name="motor_tem"/>
            <state_interface name="error_code"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>

        <joint name="${name}_HipY_joint">
            <command_interface name="effort">
                <param name="min">-${hipy_eff}</param>
                <param name="max">${hipy_eff}</param>
            </command_interface>
            <command_interface name="position"/>
            <command_interface name="velocity"/>
            <command_interface name="kp"/>
            <command_interface name="kd"/>
            <command_interface name="mode"/>
            <state_interface name="driver_tem"/>
            <state_interface name="motor_tem"/>
            <state_interface name="error_code"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>

        <joint name="${name}_Knee_joint">
            <command_interface name="effort">
                <param name="min">-${knee_eff}</param>
                <param name="max">${knee_eff}</param>
            </command_interface>
            <command_interface name="position"/>
            <command_interface name="velocity"/>
            <command_interface name="kp"/>
            <command_interface name="kd"/>
            <command_interface name="mode"/>
            <state_interface name="driver_tem"/>
            <state_interface name="motor_tem"/>
            <state_interface name="error_code"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>
        
    </xacro:macro>
</robot>